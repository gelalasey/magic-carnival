---
import UmaLayout from "../../layouts/UmaLayout.astro";
import Music from "../../components/widget/Music.astro";

const title = "Air Groove";
const cardname = "Empress Road";
const date = "07-28-2025";
const rank = "★★★";
const racetype = "turf, med, long";
const strat = "pace";
const potential = "3";
const cardimg =
    "https://gametora.com/images/umamusume/characters/chara_stand_1018_101801.png";
---

<UmaLayout
    title={title}
    ,
    cardname={cardname}
    ,
    date={date}
    ,
    rank={rank}
    ,
    racetype={racetype}
    ,
    strat={strat}
    ,
    potential={potential}
    ,
    cardimg={cardimg}
>
    <div slot="box-left">
        <table>
            <tr>
                <th>trait</th>
                <th>base</th>
                <th>bonus</th>
            </tr>
            <tr>
                <td>Speed</td>
                <td>85</td>
                <td></td>
            </tr>
            <tr>
                <td>Stam</td>
                <td>93</td>
                <td></td>
            </tr>
            <tr>
                <td>Power</td>
                <td>82</td>
                <td></td>
            </tr>
            <tr>
                <td>Guts</td>
                <td>93</td>
                <td>10%</td>
            </tr>
            <tr>
                <td>Wit</td>
                <td>97</td>
                <td>20%</td>
            </tr>
        </table>
        <button type="button" class="collapsible">skills</button>
        <div class="colcontent">
            <h3>skills</h3>
            <table>
                <tr>
                    <th>skill</th>
                    <th>name</th>
                    <th>conditions</th>
                    <th>effect</th>
                </tr>
                <tr>
                    <td
                        ><img
                            src="https://gametora.com/images/umamusume/skill_icons/utx_ico_skill_20013.png"
                        /></td
                    >
                    <td>∴win Q.E.D.</td>
                    <td
                        >If on the final corner in late race or laste spurt, no
                        rush, and order is ≤ 4</td
                    >
                    <td>Increase target speed 35% for 5 sec</td>
                </tr>
            </table>
        </div>
    </div>
    <div slot="box-right">
        <h3>URA Build</h3>
        <ul>
            <li>
                <b>Goal stats:</b> - # speed, # stam, # power, # guts, # wit
            </li>
            <li><b>Support Recs:</b></li>
            <div class="small">
                <!--images for support cards here -->
            </div>
            <li>
                <b>Parents:</b>
            </li>
            <li>
                <b>legacy sparks:</b>9★
            </li>
            <li>
                <b>Skills:</b><ul>
                    <li></li>
                </ul>
            </li>
        </ul>
        <h3>other notes</h3>
        <ul>
            <li></li>
        </ul>
    </div>
    <div slot="the-whole">
        <h3>URA Schedule</h3>
        <h4>junior goals</h4>
        <ul></ul>
        <h4>classic year</h4>
        <ul>
            <li></li>
        </ul>
        <h4>senior year</h4>
        <ul>
            <li></li>
        </ul>
    </div>
    <div slot="the-whole2">
        <img src="https://i.postimg.cc/02fstC4n/IMG_8689.gif" />
        <img src="https://i.postimg.cc/MTXMGNJs/IMG_8925.gif" />
        <img src="https://i.postimg.cc/NMgvt9ZY/IMG_8843.gif" />
        <p>
            dividers sourced from <a href="https://www.tumblr.com/pueriled"
                >@pueriled
            </a>
        </p>
    </div>
</UmaLayout>
