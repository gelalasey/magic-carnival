---
import RecentArt from "../components/RecentArt.astro";
import Layout from "../layouts/Layout.astro";

const title = "carousel";
const subtitle = "my creations";
const bannerImage = "/bg/hoshi_y_t.gif";
const tinyImage = "/smalls/sm-mcrown.gif";
---

<Layout
    title={title}
    subtitle={subtitle}
    bannerImage={bannerImage}
    tinyImage={tinyImage}
>
    <div slot="main-text">
        <div class="flexbox">
            <p>
                i am a jack of all trades and master of none - truly. adhd is a
                disease. here are some of thefun things I've created that span
                all types of works. i hope you enjoy.
            </p>
            <p>
                i'm an artist and a perfectionist - meaning i hate showing off
                my work. but maybe you won't see all the tiny mistakes i hate.
                hell you might even enjoy it.
            </p>
        </div>
        <div class="center">
            <RecentArt />
        </div>
    </div>

    <div slot="full">
        <h2>gallery</h2>
        <h3>miniatures</h3>
        <div class="flexbox">
            <div class="center">
                <img src="/blog/art/garden7.jpg" />
                <a href="#"><h4>mini garden</h4></a>
            </div>
        </div>
    </div>

    <div slot="left-half">
        <h3>free use!</h3>
        <p>
            credit not needed to display, but claim as your own and hair will
            grow on your teeth <img src="/smalls/sm-gf.gif" />
        </p>
        <hr />
        <img src="/mine/thas01.jpg" />
        <div class="artsmall">
            <img src="/mine/ls_01.png" alt="purple light stick" />
            <img src="/mine/ls_02.png" alt="red light stick" />
            <img src="/mine/ls_03.png" alt="green light stick" />
            <img src="/mine/ls_04.png" alt="yellow light stick" />
            <img src="/mine/ls_05.png" alt="orange light stick" />
            <img src="/mine/ls_06.png" alt="dark blue light stick" />
            <img src="/mine/ls_07.png" alt="white light stick" />
            <img src="/mine/ls_09.png" alt="pink light stick" />
            <img src="/mine/ls_08.png" alt="blue light stick" />
            <img src="/mine/balldog.webp" alt="pillowed af balloon dog" />
        </div>
    </div>
    <div slot="right-half">
        <h3>piccrews</h3>
        <div class="artmed">
            <div>
                <img src="/avatar/gamergel.png" />
                <a href="https://picrew.me/en/image_maker/58420">☆ </a>
            </div>
            <div>
                <img src="/avatar/wotagel.png" />
                <a href="https://picrew.me/en/image_maker/58420">☆ </a>
            </div>
            <div>
                <img src="/avatar/animegel.png" />
                <a href="https://picrew.me/en/image_maker/2675184">☆ </a>
            </div>
            <div>
                <img src="/avatar/blogicon.png" />
                <a href="https://picrew.me/en/image_maker/2307052">☆ </a>
            </div>
            <div>
                <img src="/avatar/clowncreator.png" />
                <a href="https://picrew.me/en/image_maker/549603">☆ </a>
            </div>
        </div>
    </div>
</Layout>
