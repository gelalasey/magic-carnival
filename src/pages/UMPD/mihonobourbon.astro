---
import UmaLayout from "../../layouts/UmaLayout.astro";
import Music from "../../components/widget/Music.astro";

const title = "Mihono Bourbon";
const cardname = "MB-19890425";
const date = "08-17-2025";
const rank = "★★★";
const racetype = "turf, medium";
