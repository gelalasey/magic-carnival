---
import "../styles/umpd.css";

import "@fontsource/fontdiner-swanky";
import UmaHeader from "../components/UmaHeader.astro";
import Marquee from "../components/Marquee.astro";
import UmaFooter from "../components/UmaFooter.astro";

const { title, subtitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="icon" type="image/x-icon" href="/umafavicon.png" />
    </head>

    <body>
        <div id="TEMPLATE-LAYOUT">
            <UmaHeader />
            <Marquee />
            <div class="the-section">
                <div class="box-left">
                    <div class="container">
                        <slot name="box-left" />
                    </div>
                </div>
                <div class="box-right">
                    <div class="container">
                        <slot name="box-right" />
                    </div>
                </div>
            </div>
            <div class="the-whole">
                <div class="content">
                    <div class="container">
                        <slot name="the-whole" />
                    </div>
                </div>
            </div>
            <div class="the-whole2">
                <div class="content">
                    <div class="container">
                        <slot name="the-whole2" />
                    </div>
                </div>
            </div>

            <!-- footer for the stamps -->
            <slot name="extra" />

            <UmaFooter />
        </div>
        
    </body>
</html>
