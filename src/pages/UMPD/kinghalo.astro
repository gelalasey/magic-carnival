---
import UmaLayout from "../../layouts/UmaLayout.astro";


const title = "King Halo";
const cardname = "Wild Top Gear";
const date = "06-26-2025";
const rank = "★★★";
const racetype = "turf, short";
const strat = "late";
const potential = "2";
const cardimg =
    "https://gametora.com/images/umamusume/characters/chara_stand_1061_106101.png";
---

<UmaLayout
    title={title}
    ,
    cardname={cardname}
    ,
    date={date}
    ,
    rank={rank}
    ,
    racetype={racetype}
    ,
    strat={strat}
    ,
    potential={potential}
    ,
    cardimg={cardimg}
>
    <div slot="box-left">
        <table>
            <tr>
                <th>trait</th>
                <th>base</th>
                <th>bonus</th>
            </tr>
            <tr>
                <td>Speed</td>
                <td>85</td>
                <td></td>
            </tr>
            <tr>
                <td>Stam</td>
                <td>93</td>
                <td></td>
            </tr>
            <tr>
                <td>Power</td>
                <td>82</td>
                <td></td>
            </tr>
            <tr>
                <td>Guts</td>
                <td>93</td>
                <td>10%</td>
            </tr>
            <tr>
                <td>Wit</td>
                <td>97</td>
                <td>20%</td>
            </tr>
        </table>
        <button type="button" class="collapsible">skills</button>
        <div class="colcontent">
            <h3>skills</h3>
            <table>
                <tr>
                    <th>skill</th>
                    <th>name</th>
                    <th>conditions</th>
                    <th>effect</th>
                </tr>
                <tr>
                    <td
                        ><img
                            src="https://gametora.com/images/umamusume/skill_icons/utx_ico_skill_20013.png"
                        /></td
                    >
                    <td>∴win Q.E.D.</td>
                    <td
                        >If on the final corner in late race or laste spurt, no
                        rush, and order is ≤ 4</td
                    >
                    <td>Increase target speed 35% for 5 sec</td>
                </tr>
            </table>
        </div>
    </div>
    <div slot="box-right">
        <h3>parents:</h3>
        <ul>
            <li>most compatible:</li>
            <li>best sparks:</li>
            <li>best skills:</li>
        </ul>
        <h4>deck build</h4>
    </div>
    <div slot="the-whole">
        <h3>URA Schedule</h3>
        <h4>overall goals</h4>
        <ul></ul>
        <h4>classic year</h4>
        <ul>
            <li></li>
        </ul>
        <h4>senior year</h4>
        <ul>
            <li></li>
        </ul>
    </div>
    <div slot="the-whole2">
        
    </div>
</UmaLayout>
